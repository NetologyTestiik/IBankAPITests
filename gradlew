#!/usr/bin/env bash

# ??????????? Gradle wrapper ?????? ??? CI
# ???? ?? ???????? wrapper, ?????????? ????????????? Gradle

set -e

GRADLE_VERSION="8.5"
GRADLE_CMD="gradle"

# ?????????, ???? ?? ????????? wrapper
if [ -f "gradle/wrapper/gradle-wrapper.jar" ]; then
    # ?????????? wrapper
    exec java -jar gradle/wrapper/gradle-wrapper.jar "$@"
else
    # ?????????? ????????? gradle
    echo "Using system Gradle..."
    exec $GRADLE_CMD "$@"
fi